@model IEnumerable<SnowboardCentral.Models.Shop>

@{
    ViewData["Title"] = "Index";
}

<h1>Snowboard Shops</h1>

@* Attempting to make a Carousel *@
<div class="shopCarousel">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://cdn.shopify.com/s/files/1/0965/4642/files/StoreFrontCitySkylineStyle_grande.jpg?16990297275359929494" width="200" height="475" class="d-block w-100" alt="...">
            </div>

            <div class="carousel-item">
                <img src="https://www.basinski.com/wp-content/uploads/2017/12/OOBpanorama.jpg"width="200" height="475"  class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://static.zumiez.com/skin/frontend/delorum/default/images/storelocator/storeimages/0235-zumiez-valley-plaza-mall-ca.jpg" width="200" height="475" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://images.squarespace-cdn.com/content/v1/5783c4cf2e69cfb0b30e8e33/1508425559751-V75O3W3KKDXO24981IG2/ke17ZwdGBToddI8pDm48kJCvy4-CttXrdtF-VxTlSioUqsxRUqqbr1mOJYKfIPR7LoDQ9mXPOjoJoqy81S2I8N_N4V1vUb5AoIIIbLZhVYwL8IeDg6_3B-BRuF4nNrNcQkVuAT7tdErd0wQFEGFSnP1Vq6NpTR1JqKaZdCLjjDHJHf_6aDoeuaOO4NU7-qgmn5oPn2pmGXS5fdx_abI-sw/IMG_3631.JPG?format=1500w" width="200" height="475" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <a href="@Html.DisplayFor(modelItem => item.Url)" target="_blank">@Html.DisplayFor(modelItem => item.Url)</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
