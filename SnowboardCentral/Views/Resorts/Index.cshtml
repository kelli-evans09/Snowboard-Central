@model IEnumerable<SnowboardCentral.Models.Resort>

@{
    ViewData["Title"] = "Index";
}

<h1>Snowboard Resorts</h1>
<div class="resortCarousel">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://www.sunburynews.com/wp-content/uploads/sites/48/2018/02/web1_corduroy-ski-slope_snow-trails_mansfield-ohio-1610_slide.jpg" width="200" height="475" class="d-block w-100" alt="...">
            </div>

            <div class="carousel-item">
                <img src="https://www.dispatch.com/storyimage/OH/20190723/BUSINESS/190729498/AR/0/AR-190729498.jpg" width="200" height="475" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://www.gannett-cdn.com/-mm-/91663fb702b52330025b57acd219649a8481db29/c=0-42-800-492/local/-/media/FortCollins/2014/04/03/groomerboard2.jpg?width=1600&height=800&fit=crop" width="200" height="475" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://cdn10.bostonmagazine.com/wp-content/uploads/sites/2/2019/07/vail-resorts-social.jpg" width="200" height="475" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a href="@Html.DisplayFor(modelItem => item.Url)" target="_blank">@Html.DisplayFor(modelItem => item.Url)</a>
            </td>
            <td>

                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
