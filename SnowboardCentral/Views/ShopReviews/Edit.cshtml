@model SnowboardCentral.Models.ShopReview

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@*<h4>ShopReview</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ShopId" class="control-label">Select Shop</label>
                <select asp-for="ShopId" class="form-control">
                    <option value="1">Aspen Ski And Board</option>
                    <option value="2">Colorado Mountain Sports</option>
                    <option value="3">Zumiez</option>
                </select>
                <span asp-validation-for="ShopId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label">Rating (1-5)</label>
                <select asp-for="Rating" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <label class="control-label">Review Details:</label>
            @Html.TextAreaFor(m => m.DetailReview, new { @class = "form-control" })
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Shops" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
